{% extends 'base.html.twig' %}

{% block title %}
    Votre panier
{% endblock %}

{% block body %}
    <div class="bg-light p-3">
        <h1>Your cart</h1>
    </div>

    {% if items | length > 0 %}
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.product.id }}</td>
                        <td>{{ item.product.title }}</td>
                        <td>{{ item.product.price }}</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.product.price * item.quantity }}</td>
                        <td>
                            <a href="{{ path('cart_remove', {'id': item.product.id}) }}" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="4" class="text-right">
                        Total :
                    </th>
                    <th>{{ total }}</th>
                    <th></th>
                </tr>
            </tfoot>
        </table>
    {% else %}
        <p> It's empty !</p>
    {% endif %}

{% endblock %}