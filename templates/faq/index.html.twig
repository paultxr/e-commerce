{% extends 'base.html.twig' %}

{% block title %}Frequently asked questions{% endblock %}

{% block body %}
<div class="container mt-5 mb-5 pb-5">
    <h1 class="Faq_title mb-5">Frequently asked questions</h1>
    {% for faq in faq %}
    <div class="accordion" id="accordionExample">
        <div class="card-header color_header case-color" id="heading{{faq.id}}">
            <div class="mb-0">
                <div class="row mt-4">
                    <div class="col-10 color_question">
                        <p>{{faq.question}}</p>
                    </div>
                    <div class="col-2">
                        <button class="btn text-left collapsed icon-faq" type="button" data-toggle="collapse" data-target="#collapse{{faq.id}}" aria-expanded="false" aria-controls="collapse{{faq.id}}">
                            <img src="data:image/svg+xml;base64," height="32px" width="32px"/></a>
                        </button>
                    </div>
                </div>
            </div>
        </div>
            <div id="collapse{{faq.id}}" class="collapse color_answer" aria-labelledby="heading{{faq.id}}" data-parent="#accordionExample">
                <div class="card-body color_answer">
                {{faq.answer}}
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
